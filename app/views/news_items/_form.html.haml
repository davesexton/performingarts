= form_for(@news_item) do |f|
  - if @news_item.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@news_item.errors.count, "error")
        prohibited this news_item from being saved:

      %ul
        - @news_item.errors.full_messages.each do |msg|
          %li #{msg}

  %div.field
    = f.label :heading
    %br/
    = f.text_field :heading

  %div.field
    = f.label :body
    %br/
    = f.text_area :body

  %div.actions
    = f.submit

