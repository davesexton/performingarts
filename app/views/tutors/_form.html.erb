<%= form_for(@tutor) do |f| %>
  <% if @tutor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tutor.errors.count, "error") %>
        prohibited this tutor from being saved:
      </h2>

      <ul>
      <% @tutor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :role %><br />
    <%= f.text_field :role %>
  </div>
  <div class="field">
      <%= link_to(image_tag(f.object.thumb_path,
                            {width: '125', title: f.object.name, alt: f.object.name}),
                            f.object.image_path,
                            {class: 'lightbox'}) if f.object.thumb_path %>
    <%= f.label :image_upload, 'New upload'  %><br />
    <%= f.file_field :image_upload %>
  </div>
  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
