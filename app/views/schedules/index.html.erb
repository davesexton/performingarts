<h1>Course Schedule</h1>

<table>
  <tr>
    <th>Age group</th>
    <th>Course</th>
    <th>Venue</th>
    <th>Start time</th>
    <th>End time</th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.age_group.name unless schedule.age_group.blank? %></td>
    <td><%= schedule.course.name unless schedule.course.blank? %></td>
    <td><%= schedule.venue.name unless schedule.venue.blank? %></td>
    <td><%= schedule.time_start.to_formatted_s(:time) %></td>
    <td><%= schedule.time_end.to_formatted_s(:time) %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy',
                      schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Course Schedule', new_schedule_path %>
