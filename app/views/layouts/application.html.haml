!!! 5
%html{data: {web_property_id: APP_CONFIG['ga_id']}}
  %head
    %title CTPA #{' - ' + @title unless @title == nil}
    - if @description
      %meta{name: "description", content: "= @description "}
      %meta{name: "keywords",
        content: "performing arts,child performers,child actors,child singers,child dancers"}
    = stylesheet_link_tag    "application", media:  "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{name: "author", content: "Dave Sexton"}

  %body{class: controller.controller_name}
    %div#container.container
      %header
        %nav
          %ul
            %li
              = link_to_unless controller.controller_name == 'home',
                'Home', '/'
            %li  |
            %li
              = link_to_unless controller.controller_name == 'news',
                'News', '/news'
            %li  |
            %li
              = link_to_unless controller.controller_name == 'our_tutors',
                'Our Tutors', '/our_tutors'
            %li  |
            %li
              = link_to_unless controller.controller_name == 'classes',
                'Classes', '/classes'
            %li  |
            %li
              = link_to_unless controller.controller_name == 'gallery',
                'Gallery', '/gallery'
            %li  |
            %li
              = link_to_unless controller.controller_name == 'faqs',
                'FAQs', '/faqs'
            %li  |
            %li
              = link_to_unless controller.controller_name == 'contactus',
                'Contact us', '/contactus'

      - if flash[:notice]
        %div#notice
          %div #{flash[:notice]}

      %section#main
        = yield

