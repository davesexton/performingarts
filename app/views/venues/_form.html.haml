= form_for(@venue) do |f|
  - if @venue.errors.any?
    %div.error_explanation
      %h2
        = pluralize(@venue.errors.count, "error")
        prohibited this venue from being saved:

      %ul
      - @venue.errors.full_messages.each do |msg|
        %li
          = msg

  %div.field
    = f.label :name
    %br/
    = f.text_field :name

  %div.actions
    = f.submit

