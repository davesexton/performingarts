- @title = 'Home'
- @description = 'home'

%h1 Contactus#index

= form_for @message, url: contactus_path do |f|
  = f.label :name, 'Your name:'
  = f.text_field :name, size: 25
  %br/
  = f.label :email, 'Your email address:'
  = f.text_field :email, size: 25
  %br/
  = f.label :message, 'Your message:'
  %br/
  = f.text_area :message, size: '40x10'
  %br/
  = f.submit "Send"
